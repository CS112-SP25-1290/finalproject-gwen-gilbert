<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.miracosta.cs112.finalproject.finalproject.ChompController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Play!" onAction="#onPlayChompClick"/>
    <Button text="Change Starting Player" onAction="#onChangePlayerClick"/>
    <Button text="Change Board Size" onAction="#onChangeBoardClick"/>
    <Button text="Return To Menu" onAction="#onExitClick"/>
</VBox>
